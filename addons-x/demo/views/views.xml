    <!-- explicit kanban view definition -->

    <record id="demo.x_demo_odoo_kanban" model="ir.ui.view">
        <field name="name">x_demo_odoo_kanban</field>
        <field name="model">demo.x_demo_odoo</field>
        <field name="arch" type="xml">
            <kanban >
